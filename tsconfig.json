{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["dom", "es2018"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "demo"
  ]
}
